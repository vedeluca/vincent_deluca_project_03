<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/DetailsFragment">

    <fragment
        android:id="@+id/DetailsFragment"
        android:name="com.example.vincent_deluca_project_03.RecyclerFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_recycler">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/RecyclerFragment" />
    </fragment>
    <fragment
        android:id="@+id/RecyclerFragment"
        android:name="com.example.vincent_deluca_project_03.DetailsFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_details">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/DetailsFragment" />
    </fragment>
</navigation>